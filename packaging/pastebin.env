# Pastebin configuration
# See https://github.com/espebra/pastebin for documentation

# S3 Configuration (required)
PASTEBIN_S3_BUCKET=
PASTEBIN_S3_ENDPOINT=s3.amazonaws.com
PASTEBIN_S3_REGION=us-east-1
PASTEBIN_S3_USE_SSL=true
PASTEBIN_S3_ACCESS_KEY=
PASTEBIN_S3_SECRET_KEY=

# Server Configuration
PASTEBIN_HOST=127.0.0.1
PASTEBIN_PORT=8080

# Paste Configuration
PASTEBIN_MAX_PASTE_SIZE=1048576
PASTEBIN_DEFAULT_TTL=8760h
PASTEBIN_CLEANUP_INTERVAL=1h

# Logging
PASTEBIN_LOG_FORMAT=text
PASTEBIN_LOG_LEVEL=info

# Security (set to true when using HTTPS)
PASTEBIN_SECURE_COOKIES=false
