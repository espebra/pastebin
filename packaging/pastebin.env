# Pastebin configuration
# See https://github.com/espebra/pastebin for documentation

# S3 Configuration (required)
S3_BUCKET=
S3_ENDPOINT=s3.amazonaws.com
S3_REGION=us-east-1
S3_USE_SSL=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Server Configuration
PASTEBIN_HOST=127.0.0.1
PASTEBIN_PORT=8080

# Paste Configuration
MAX_PASTE_SIZE=1048576
DEFAULT_TTL=8760h
CLEANUP_INTERVAL=1h

# Logging
LOG_FORMAT=text
LOG_LEVEL=info

# Security (set to true when using HTTPS)
SECURE_COOKIES=false
